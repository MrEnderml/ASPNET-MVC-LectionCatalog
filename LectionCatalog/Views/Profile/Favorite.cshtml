@model IEnumerable<Lection>

<div class="row">
	<div class="col-md-2">
		<partial name="_ProfileMenuNavigation.cshtml" />
	</div>
	<div class="col-md-8" style="background-color: #f3f1f1">
		@if (ViewBag.Count)
		{
			@foreach (var item in Model)
			{
				<div class="col-md-12 m-1 d-flex lect">
					<div>
						<a asp-controller="Lections" asp-action="Details" asp-route-id="@item.Id">
							<img width="360px" src="@item.ImageURL" />
						</a>
					</div>
					<div class="px-2">
						<div>
							<div>
								<h3>@item.Name</h3>
							</div>
							<div class="my-1">
								<span class="btm">@item.Views Views </span>
								<span>@item.Year year</span>
							</div>
						</div>
						<div>
							<p>@item.Description</p>
						</div>
					</div>
					<div style="font-size: 22px;margin-left: auto;margin-right: 0px;"> 
						<button type="button" class="btn-close" onclick="ajaxDeleteRequest(@item.Id)" aria-label="Close"></button>
					</div>
				</div>
			}
		}
		else
		{
			<div class="col-md-12 m-3 text-center">
				<h2>There is no any favorite lection</h2>
			</div>
		}
	</div>
</div>

<script>
	function ajaxDeleteRequest(id){
		console.log("Success clicked on delete button");
		$.ajax({
			url: '/Profile/delFavorite',
			data: { LectionId: id, eq: $(".lect").index() },
			dataType: "json",
			type: "get",
			cache: false,
			success: function (result) {
				$(".lect").eq(result).remove();
				console.log(result);
			},
			error: function () {
				
			}
		});
	}
</script>