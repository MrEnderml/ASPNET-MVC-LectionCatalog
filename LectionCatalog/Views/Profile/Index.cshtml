@model EditAccountVM

<div class="row">
	<div class="col-md-3">
		<partial name="_ProfileMenuNavigation.cshtml" />
	</div>
	<div class="col-md-8">
		<div class="section">
			<div class="section-head">
				<h3>Personal date</h3>
			</div>
			<div class="section-body">
				<form asp-action="Index">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="col-md-3">
						<div class="form-group mt-3">
							<label asp-for="UserName" class="control-label"></label>
							<input asp-for="UserName" class="form-control userNameInput" disabled="disabled">
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>
						<div class="form-group mt-3">
							<label asp-for="Email" class="control-label"></label>
							<input asp-for="Email" class="form-control emailAddressInput" disabled="disabled">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-group mt-2">
							<input type="submit" value="Update" class="btn-Update btn btn-outline-success float-end mx-1" style="display: none" />
							<a class="btn-Cancel btn btn-outline-secondary float-end" style="display: none">Cancel</a>
							<a class="btn-Edit btn btn-outline-secondary float-end">Edit</a>
						</div>
					</div>
				</form>
			</div>
			
		</div>
	</div>
</div>

<script>
	$( ".btn-Edit" ).on( "click", function() {
		console.log( "CLICK" );
		$(".btn-Edit").hide();
		$(".btn-Cancel").show();
		$(".btn-Update").show();
		$(".userNameInput").prop( "disabled", false );
		$(".emailAddressInput").prop( "disabled", false );
	});

	$(".btn-Cancel").on("click", function (){
		console.log("Cancel click");
		$(".btn-Edit").show();
		$(".btn-Cancel").hide();
		$(".btn-Update").hide();
		$(".userNameInput").prop( "disabled", true );
		$(".emailAddressInput").prop( "disabled", true );
	});
	
</script>
