@inject UserManager<ApplicationUser> UserManager;

@if (!User.Identity.IsAuthenticated)
{
	<a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login">
		<i class="bi bi-box-arrow-in-right"></i>Log in
	</a>
	<span style="padding: 5px"></span>
	 
	<a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Account" asp-action="Register">
		<i class="bi bi-person-plus"></i>Register
	</a>
}
else
{
	<div class="dropdown">
		<button class="btn btn-outline-success dropdown-toggle" id="profileBtn" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			@UserManager.GetUserName(User)
		</button>

		<div class="dropdown-menu" aria-labelledby="profileBtn">
			<a class="dropdown-item" asp-controller="Profile" asp-action="Profile"><i class="bi bi-person-badge"></i> Profile</a>
			
			@if (User.IsInRole("Admin"))
			{
				<a class="dropdown-item" asp-controller="Account" asp-action="Users"><i class="bi bi-people"></i> Users</a>
			}
			<a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-in-right"></i> Log out</a>
		</div>
	</div>
}


