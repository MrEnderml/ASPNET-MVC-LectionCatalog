@model IEnumerable<Lector>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="row">
	<div class="col-md-8 offset-2">
		<div class="container">
			<form>
				<div class="d-flex form-group form-inline m-2">
					<input type="text" class="form-control mx-1" placeholder="Add Lector" style="width: 300px" />
					<button class="btn btn-outline-success" type="submit">Add Lector</button>
					<span style="color: red"></span>
				</div>
			</form>
		</div>
		<div class="container my-5">
			@foreach(var item in Model){
				<div class="lector">
					<div class="col-md-12 mt-3" style="font-size: 22px; font-weight: 700">
						<span>@item.FullName</span>
						<button class="btn btn-outline-danger" style="float: right; padding: 0.1rem 0.2rem"><i class="bi bi-x-lg"></i></button>
					</div>
					<hr style="margin: -3px">
				</div>
			}
		</div>
	</div>
</div>
